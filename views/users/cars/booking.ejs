
<% layout('layouts/boilerplate')%>
    <div class="custom-body">
        <form class="booking-form" action="/users/cars/payment" method="POST">
            <div class="form-group">
                <label for="from">From:</label>
                <input type="text" id="from" name="from" value=<%= car[0].location %> readonly>
            </div>
            <div class="form-group">
                <label for="to">To:</label>
                <input type="text" id="to" name="to" required>
            </div>
            <div class="form-group">
                <label for="days">Number of Days:</label>
                <input type="number" id="days" name="days" required>
            </div>
            <div class="form-group">
                <label for="price">Price(Per Day):</label>
                <input type="number" id="price" name="price" value=<%= car[0].price %> readonly>
            </div>
            <div class="form-group">
                <label for="carPickupDate">Car Pickup Date:</label>
                <input type="Date" id="carPickupDate" name="carPickupDate">
            </div>
            <div class="form-group">
                <label for="carname">Car Booked: </label>
                <span><%= car[0].carName %></span>
            </div>

            <button type="submit">Proceed to Payment</button>
        </form>
        <a href="/users/cars" class="book-button">View Cars</a>
    </div>
